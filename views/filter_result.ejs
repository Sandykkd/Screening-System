                            <td>
                                <input type="submit" id="ll" value="Search By Shift" class="btn btn-secondary">
                            </td>
                        </form>
                        <form action="/search_dept" method="post" id="form-3">
                            <td>
                                Filter By Department
                            </td>
                            <td>
                                <select name="search_dept" class="form-control">
                                    <option name="table1" value="AERONAUTICAL ENGINEERING">AERONAUTICAL
                                        ENGINEERING</option>
                                    <option name="table2" value="AUTOMOBILE ENGINEERING">AUTOMOBILE ENGINEERING
